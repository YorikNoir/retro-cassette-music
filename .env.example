# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=sqlite:///db.sqlite3
# For production:
# DATABASE_URL=postgresql://user:password@localhost:5432/retro_cassette_music

# AI Models Path
MODELS_PATH=../checkpoints
VAE_PATH=../checkpoints/vae
ACESTEP_MODEL=acestep-v15-turbo
LLM_MODEL=acestep-5Hz-lm-0.6B
EMBEDDING_MODEL=Qwen3-Embedding-0.6B

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
USE_GPU=True

# LLM API Settings (optional - choose one provider)
# Options: openai, comet, local (default)
LLM_PROVIDER=local

# OpenAI API (for lyrics generation)
# OPENAI_API_KEY=your-openai-key-here

# Comet API (alternative to OpenAI)
# COMET_API_KEY=your-comet-api-key-here
# OpenAI client appends /chat/completions, so base URL must end in /v1
COMET_API_BASE_URL=https://api.cometapi.com/v1

# Security
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# For development, a key will be auto-generated. For production, set a secure key here.
ENCRYPTION_KEY=

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB
MEDIA_ROOT=media/
STATIC_ROOT=staticfiles/

# Rate Limiting
GENERATION_RATE_LIMIT=10  # songs per hour per user
